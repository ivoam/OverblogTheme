					}
					.comments-number a:hover {
						background-color: #1982D1;
						color: #fff;
					}
					.post .date,
					.post .tags {
						color: #666;
						font-size: 13px;
						margin-top: 5px;
					}
					.post .date:first-letter {
						text-transform: capitalize;
					}
					.post .tag {
						font-size: 12px;
					}
					.post .tag:first-letter {
						text-transform: capitalize;
					}
					.date,
					.post .tag a,
					.post .tag a:visited,
