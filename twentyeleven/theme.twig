					.top-link a:visited {
						color: #1982D1;
						text-decoration: none;
						text-transform: capitalize;
					}
					.top-link a:hover {
						text-decoration: underline;
					}
					.post-footer {
						border-bottom: 1px solid #DDD;
						margin: 30px 0 20px;
						padding-bottom: 20px;
					}

			/* Repost banner */
			.ob-repost {
				background: #F2F2F2;
				border: 1px solid #EEE;
