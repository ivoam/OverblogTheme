										<div class="post-cover">
											<a href="{{ Post.Permalink }}" title="{{ Post.Snippet }}">
												<img src="{% if Post.Cover is not empty %}{{ Post.Cover|resize(582,288)|crop }}{% else %}{{ Custom('post_cover')|resize(582,288)|crop }}{% endif %}" alt="" title="" width="582" height="288" />
											</a>
										</div>
									{% endif %}
									<p>{{ Post.Snippet }}</p>
								{% endif %}
							</div>
							{% if Custom('display_mode') != 'Summary' %}
								<div class="top-link">
									<a href="#">[{{ Lang.Get('top') }}]</a>
								</div>
							{% endif %}
							<footer class="footer">
								<div class="tags">
									{% if Post.Author.Nickname %}
										<p>
											{{ Lang.Get('Written by') }} <span>{{ Post.Author.Nickname }}</span>
										</p>
									{% endif %}

									<p class="tag">
										{% list Post.Tags %}
											{% if loop.first is not empty %}
												<span>{{ Lang.Get('Tagged on') }}</span>
											{% endif %}
												<a href="{{ Tag.Url|lower }}">#{{ Tag.Title }}</a>{% if loop.last is empty %}, {% endif %}
										{% endlist %}
									</p>
								</div>

								<div class="share">
                                	<h6>{% if isPage %}{{ Lang.Get('Share this page') }}{% else %}{{ Lang.Get('Share this post') }}{% endif %}</h6>
                                	{% if Custom('share_service') == 'Google +' %}
                                        <div class="google-share">
                                        	<div class="g-plusone" data-size="medium" data-href="{{ Post.Permalink }}"></div>
                                        </div>
                                    {% endif %}
                                    {% if Custom('share_service') == 'Twitter' %}
                                    	<div class="twitter-share">
                                        	<a href="https://twitter.com/share" class="twitter-share-button"  data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Post.Permalink }}" data-lang="{{ Blog.Lang }}"{% if Custom('twitter_username') is not empty %} data-via="{{Custom('twitter_username')}}"{% endif %}></a>
                                        </div>
                                    {% endif %}
                                    {% if Custom('share_service') == 'Facebook' %}
                                        <div class="facebook-share">
                                        	<div class="fb-like" data-href="{{ Post.Permalink }}" data-send="false" data-layout="button_count" data-width="150" data-show-faces="false"></div>
                                        </div>
                                    {% endif %}
                                    {% if Custom('share_service') == 'All' or Custom('share_service') is empty %}
                                    	<div class="google-share">
                                        	<div class="g-plusone" data-size="medium" data-href="{{ Post.Permalink }}"></div>
                                        </div>
                                        <div class="twitter-share">
                                        	<a href="https://twitter.com/share" class="twitter-share-button"  data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Post.Permalink }}" data-lang="{{ Blog.Lang }}"{% if Custom('twitter_username') is not empty %} data-via="{{Custom('twitter_username')}}"{% endif %}></a>
                                        </div>
                                        <div class="facebook-share">
                                        	<div class="fb-like" data-href="{{ Post.Permalink }}" data-send="false" data-layout="button_count" data-width="150" data-show-faces="false"></div>
                                        </div>
                                    {% endif %}
                                    <div class="ob-share">
                                    	{{ Post.RepostButton }}
                                    </div>
                                    <div class="cb"></div>
					         	</div>

					         	{% if isSingle and Navigation.PreviousPost is not empty or Navigation.NextPost is not empty and not isPage%}
									<div id="navigation" class="single">
										{% if Navigation.PreviousPost is not empty %}
					                    	<a class="prev" href="{{ Navigation.PreviousPost.Permalink }}" title="{{ Navigation.PreviousPost.Title }}">&laquo; {% if Navigation.PreviousPost.Title is not empty %}{{ Navigation.PreviousPost.Title | truncate(20) }}{% else %}{{ Lang.Get('Previous post') }}{% endif %}</a>
					                    {% endif %}

										{% if Navigation.NextPost is not empty %}
					                    	<a class="next" href="{{ Navigation.NextPost.Permalink }}" title="{{ Navigation.NextPost.Title }}" >{% if Navigation.NextPost.Title is not empty %}{{ Navigation.NextPost.Title | truncate(20) }}{% else %}{{ Lang.Get('Next post') }}{% endif %} &raquo;</a>
					                    {% endif %}
									</div>
									<div class="cb"></div>
								{% endif %}

					         	{% if isSingle and isPage == false and Post.ShowComments is not empty %}
						         	<div class="item-comments" id="comments" >
									    {% if Custom("comment") == "Facebook" %}
									    	<div class="fb-comments" data-href="{{ Post.Permalink }}" data-num-posts="10" data-width="600"></div>
