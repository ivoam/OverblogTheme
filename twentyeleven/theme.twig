									    {% else %}
									    	<h6>{{ Lang.Get('Comment this post') }}</h6>
									        {{ Post.Comments }}
									    {% endif %}
									</div>
								{% endif %}
							</footer>
						</article>
					{% else %}
						<p class="error">
							{% if isSearch %}
								{{ Lang.Get('No result for this expression') }}.
							{% else %}
								{{ Lan.Get('No post') }}.
							{% endif %}
						</p>
					{% endlist %}
				{% endif %}
			</section>
			<section id="right-content" role="complementary">
				<aside id="sidebar">
					{% if Custom('display_widget_follow') != true %}
						<div class="widget follow">
							<h3>{{ Lang.Get('follow me') }}</h3>
							<ul>
								{% if Custom('facebook_username') is not empty %}
