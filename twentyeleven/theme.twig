					{% endif %}

					{% if Custom('display_widget_pages') != true and Blog.Pages is not empty %}
						<div class="widget">
							<h3>{{ Lang.Get('pages') }}</h3>
							<ul>
								{% list Blog.Pages %}
		                        	<li><a href='{{ Page.Url }}'>{{ Page.Title }}</a></li>
		                        {% endlist %}
							</ul>
						</div>
					{% endif %}

					{% if Custom('display_widget_last') != true and Blog.Posts is not empty %}
						<div class="widget last">
