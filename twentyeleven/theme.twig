						</li>
						{% list Blog.PostsTags(Custom('tag_number')) %}
							{% if PostsTag.Title|lower != "pinned" %}
								<li {% if isTag and Tag.Title == PostsTag.Title %}class="selected"{% endif %}>
									<a href="{{ PostsTag.Url }}" title="{{ PostsTag.Title|title }}">{{ PostsTag.Title|truncate(20) }}</a>
								</li>
							{% endif %}
						{% endlist %}
