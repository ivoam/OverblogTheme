	<body>
		<div id="fb-root"></div>
		<div id="global">
			<header id="blog-header" role="banner">
				{% if Blog.Avatar is not empty %}
                     <div class="avatar">
                        <a href="{{ Blog.Url }}"><img src="{{ Blog.Avatar|resize(100,100)|crop }}" alt="{{ Blog.Title}}" width="100" height="100"  /></a>
                    </div>
                {% endif %}
				<div class="title">
					<h1>
						<a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title }}</a>
					</h1>
					<p class="description">{{ Blog.Description }}</p>
				</div>
				<div id="search">
					<form class="search" action="/search" method="post">
						<input type="text" placeholder="{{ Lang.Get('Search') }}" value="" name="q" />
						<input type="submit" value="{{ Lang.Get('Search') }}" />
