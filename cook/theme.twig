            /* Sections */
            .ob-section-text, .ob-section-images, .ob-section-video, .ob-section-audio, .ob-section-quote, .ob-secton-map {width: 480px;}

             /* Medias */
            .ob-cell, .ob-img, .ob-media, .ob-video, .ob-video iframe, .ob-slideshow, .yui3-slideshow-content {max-width: 480px;}
            .ob-section-images .ob-slideshow {height: 370px;}

            /* Section text */
            .ob-text h3,
            .ob-text h4,
            .ob-text h5 {font-weight: normal; margin: 15px 0 5px;}
            .ob-text h3 {font-size: 18px;}
            .ob-text h4 {font-size: 16px;}
            .ob-text h5 {font-size: 14px; font-weight: bold;}
            .ob-text ol, .ob-text ul {margin-left: 15px;}
            .ob-text strong {font-weight: bold;}
            .ob-text pre {width: 480px;  white-space: pre-wrap; /* CSS 3 */ white-space: -moz-pre-wrap; /* Mozilla depuis 1999 */ white-space: -pre-wrap; /* Opera 4 - 6 */ white-space: -o-pre-wrap; /* Opera 7 */ word-wrap: break-word; /* IE 5.5+ */ overflow: auto;/* IE 6 */}

            /* Section map */
            .ob-map div {color: #282924;}

            /* Section image */
            .ob-row-1-col img {width: 480px;}
            .ob-row-2-col img {width: 240px;}
