    <body>
        <div id="global">
            <div id="ln_0" class="ln">
                <div id="cl_0_0" class="cl">
                    <div class="column_content">
                        <div class="header">
                            <div id="top">
                                <h1 class="title">
                                    <a href="{{ Blog.Url }}" title="{{ Blog.Description }}" class="topLien">{{ Blog.Title }}</a>
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div id="ln_1" class="ln">
                <div id="cl_1_0" class="cl">
                    <div class="column_content">
                        <div>
                        {# List title #}
                            {% if isSearch %}
                            <p class="list-title">{{ Lang.Get('Search for') }} &quot;{{ Search }}&quot;</p>
                            {% endif %}

                            {% if isTag %}
                            <p class="list-title">{{ Lang.Get('Posts with') }} #<strong>{{ Tag.Title }}</strong> {{ Lang.Get('tag') }}</p>
                            {% endif %}

                            {# Posts #}
                            {% if Posts is empty %}
                                {% if isSearch %}
                                <div class="contenuArticle">
                                    <p>{{ Lang.Get('No result, try again') }}  !</p>
                                </div>
                                {% elseif isSpecial %}
                                <div class="contenuArticle">
                                    {{ SpecialContent }}
                                </div>
                                {% else %}
                                <div class="contenuArticle">
                                    <p>{{ Lang.Get('No post') }}</p>
                                </div>
                                {% endif %}
                            {% else %}
                            {# shortcut:[Posts list] #}
                                {% list Posts %}
                                <article>
                                    <div class="article index_{{ loop.index }} {% if (loop.index % 2) == 0 %}odd{% else %}even{% endif %}">
                                        <div class="option beforeArticle">
                                            <div class="date">
                                                <time datetime="{{ Post.Date }}">
                                                    <span class="day">{{ Post.Date | datel('dd') }}</span>
                                                    <span class="month">{{ Post.Date | datel('MMMM') | title }}</span>
                                                    <span class="year">{{ Post.Date | date('Y') }}</span>
                                                </time>
                                            </div>
                                        </div>
                                        <div class="divTitreArticle">
                                            <div class="post-title">
                                                <h2>
                                                    {% if isSingle %}
                                                    <a href="{{ Post.Permalink }}" class="titreArticle" title="{{ Post.Snippet }}">{% if Post.Title is not empty %}{{ Post.Title }}{% else %}{{ Lang.Get('From') }} {% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get('and') }} {% endif %}{% endlist %}{% endif %}</a>
