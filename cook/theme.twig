            .date .year {font-size: 1em;}
            .divTitreArticle, .divPageTitle {border-bottom:1px solid #636360; color:#fff; font-size:35px; margin:0 0 20px 2px; padding:10px 0 15px 65px; width:453px;}
            .contenuArticle {line-height:18px; width: 480px; margin-left: 39px; padding-bottom: 10px;}
            .contenuArticle p,
            .contenuArticle ol,
            .contenuArticle ul {margin-bottom:10px;}
            .contenuArticle a {color:#c2e074;}
            .afterArticle {border:solid #636360; border-width:1px 0; margin-left:40px; padding:5px 0; position:relative; width:480px;}
            .afterArticle a {color:#e7d08b; font-weight:bold;}
            .afterArticle .linkAddComment {color:#c1e073;}
            .afterArticle .spanRecommend {}
            .afterArticle .linkRecommend {color:#e6bbe0;}
            .list-title {position: absolute; top: -50px; left: 20px; font-size: 24px; font-weight: normal;}
            .ob-section {margin: 1em 0;}
            .ob-text pre {color: #aaa;}

            /* Box */
            .box {color:#f6f2ba; margin:30px 0 0 15px; width: 98%;}
            .box a {color:#fff;}
            .box-content {font-size:11px; font-style:italic;}
            .box-content li {background:url('http://assets.over-blog-kiwi.com/themes/3/images/box-li.png') no-repeat 0px 10px; margin-bottom:5px; padding-left:10px;}
            .box-content form input[type="text"] {background:#d8d8d5; border:none; padding:2px;}
            .box-content form input[type="submit"] {width: 60px; height: 17px; border: 1px solid #a4c871; cursor: pointer; background-color: #C2E074; font-size: 13px; font-family: 'Georgia', serif;}
            .box-content form input[type="submit"]:hover {background-color: #a4c871;}
            .box-content form input[type="submit"]:active {background-color: #94b565;}
            .box-titre {background:url('http://assets.over-blog-kiwi.com/themes/3/images/h2-border.png') no-repeat bottom left; color:#f2aa3e; font-size:13px; margin-bottom:5px; padding-bottom:5px; text-transform:uppercase;}
            .box-titre a {color:#f2aa3e;}

            /* Profile */
            .box.profil {background:url('http://assets.over-blog-kiwi.com/themes/3/images/post-it.png') no-repeat top left; color:#636363; height:256px; margin:0; padding:45px 0 0 35px; position:relative; width:284px;}
            .box.profil .box-titre h2 {color:#ae6100; font-size:23px; margin-bottom:20px;}
            .box.profil .box-content {color:#636363; font-size:12px;}
            .box.profil .box-content li {color:#636363;}
            .box.profil img {position:absolute; right:34px; top:40px;}
            .box.profil a {color:#ae6100; text-decoration:underline;}

