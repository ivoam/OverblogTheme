            .ob-section-link .ob-url .ob-link {color: white;}
            .ob-section-link .ob-url .ob-link:hover {color:#CCC;}
            .ob-section-link .ob-desc {margin-top: 5px;}

            .ob-section-link .ob-title .ob-link,
            .ob-section-link .ob-snippet,
            .ob-section-link .ob-url .ob-link {
                font-family: Georgia,serif;
            }

            .ob-section-link .ob-ctn,
            .ob-section-file .ob-ctn,
            .ob-section-quote {
                border: 1px solid #636360;
                background: #3d3e39; background: rgba(255, 255, 255, 0.1);
            }

            /* Contact */
            .ob-label {width: 20%; color: #C2E074; font-size: 14px;}
            .ob-form-field {margin-bottom: 20px;}
            .ob-input-submit, .ob-error {margin-left: 20%;}
            .ob-input-text, .ob-input-email, .ob-input-textarea {padding: 2px; border: none; background-color: #D8D8D5;}
            .ob-input-submit {width: 70px; height: 25px; margin-top: -10px; border: 1px solid #a4c871; cursor: pointer; background-color: #C2E074; font-size: 14px; font-family:Georgia,serif;}
            .ob-input-submit:hover {background-color: #a4c871;}
            .ob-input-submit:active {background-color: #94b565;}
        </style>
