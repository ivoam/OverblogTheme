            .calendarTable1 td {font-size:12px; }
            .calendarTable1 td.calendarTop1 {color:#d65600; font-size:15px; height:30px;}
            .calendarTable1 td.calendarHeader1 {color:#b88600; font-style:normal; height:20px;}
            .calendarTable1 td.calendarDays1 {border-right:1px solid #fff; padding:1px;}
            .calendarTable1 td.calendarToday1 {background:#ae6100; color:#fff;}
            .calendarTable1 table {font-size:11px; font-weight:bold; margin-top:10px;}
            .calendarTable1 table td.calendarDays1 {border:none;}
            .calendarTable1 td a {color:#714400; display:block; padding:2px; text-align:center;}
            .calendarTable1 td a:hover {background:#ae6100; color:#fff; text-decoration:none;}

            /* Newsletter */
            .box.newsletter {color:#f6f2ba;}
            .box.newsletter li {background: transparent;}

            /* Form side */
            .box.newsletter form,
            .box.recherche form {}


            /* Share buttons */
            .share {width: 480px; margin: 0 0 20px 39px;}
            .fb-like iframe {margin-top: -3px;}

            /* Comments */
            .article_navigation {margin:10px 0 0 40px; width: 480px;}
            .h2commentMessage {margin-bottom: 10px; padding: 10px 10px 5px 0; color:#fff; font-size:20px; font-weight:bold;}
            .commentsList {}
            .item-comments {width: 480px; margin-left: 39px;}
            .commentContainer {border:1px solid #636360; margin:0 40px 20px 40px;}
            .commentMessage {font-size:14px; line-height:20px; padding:20px;}
            .commentOption {font-size:11px; height:20px; padding:0 20px 20px 20px; text-align:right;}
            .afterReactions {margin-left:40px;}
            .postText, .fbFeedbackPost {color: #FFF;}

            /* liste d'article */
            .listArticles {margin-left: 15px; margin-bottom: 15px; list-style: none;}
            .pagination {width: 480px; margin: 10px 40px; font-size: 11px; padding: 2px 0;}

            .pagination .previous {float: left;}
            .pagination .top {position: absolute; left: 49%;}
            .pagination .next {float: right;}
            .profile .avatar {float: left; margin-right: 10px;}

            .ob-repost {border: 1px solid #636360; background: #3D3E39; background: rgba(255, 255, 255, 0.1); text-align: center;}
