            .ob-section-link .ob-img {float: left; width: 170px;}
            .ob-section-link p.ob-title {color: #C2E074; margin-left: 20px; max-height: 36px; overflow: hidden;}
            .ob-section-link p.ob-title .ob-link {color: #C2E074;}
            .ob-section-link p.ob-snippet {color: white;margin-bottom: 35px; margin-left: 20px; max-height: 26px; overflow: hidden;font-size:1.2em;}
