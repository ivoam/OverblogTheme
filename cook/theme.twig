            a {color:#c2e074; text-decoration:none;}
            a:hover {text-decoration:underline;}
            input {}
            #ln_1 {background:url('http://assets.over-blog-kiwi.com/themes/3/images/main.png') repeat-y 50px 0px;}
            #global {background:url('http://assets.over-blog-kiwi.com/themes/3/images/wall.png') no-repeat top center;}
            #ln_2 {background:url('http://assets.over-blog-kiwi.com/themes/3/images/footer.png') no-repeat 50px 0px; height:200px;}

