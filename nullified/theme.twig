    <body>
        <div id="wrapper">
            <!-- shortcut:[Header content] -->
            {% if Custom('custom_header_picture') is not empty %}
                <div id="splash">
                    <a class="cover" href="{{ Custom('custom_header_picture') }}" title="{{ Blog.Title }} - {{ Blog.Description }}">
                        <img src="{{ Custom('custom_header_picture')|resize(980, 285)|crop|default('http://assets.over-blog-kiwi.com/themes/29/images/105.jpg') }}" alt="" width="980" height="285" />
                    </a>
                </div>
            {% endif %}
            <div id="menu">
                <ul>
                    <li {% if isIndex %} class="current_page_item" {% endif %}>
                        <a href="{{ Blog.Url }}">{{ Lang.Get('Home') }}</a>
                    </li>
                    {% list Blog.PostsTags(6, 'SORT_POSTS_NUMBER_DESC') %}
                        <li {% if isTag and Tag is not empty and Tag.Title == PostsTag.Title %} class="current_page_item" {% endif %}><a href="{{ PostsTag.Url }}">{{ PostsTag.Title }}</a></li>
                    {% endlist %}
                    <li><a href="/contact">{{ Lang.Get('Contact') }}</a></li>
                </ul>
                <br class="clearfix">
            </div>
            <div id="header">
                <div id="logo">
                    <h1>
                        <a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title }}</a>
                    </h1>
                </div>
                {% if Custom('custom_hide_widget_search_form') == false %}
                    <div id="search">
                        <form class="search" method="post" action="/search">
                            <div>
                                <input class="form-text" size="32" maxlength="64" type="text" name="q" placeholder="{{ Lang.Get('Search') }}..."  id="search-text" value="{{ Search }}" />
                                <input class="submit" type="submit" value="{{ Lang.Get('OK') }}" />
                            </div>
                        </form>
                    </div>
                {% endif %}
                <div class="clear"></div>
            </div>
            <div id="page">
                <div id="content">
                    <!-- shortcut:[Main content] -->
                    {% if isSpecial %}
                        <div class="special">
                            {{ SpecialContent }}
                        </div>
                    {% else %}
                            <div class="box">
                                {% if isIndex %}
                                    {% if Custom('custom_home_subtitle') is not empty %}
                                        <p class="tagline">
                                            {{ Custom('custom_home_subtitle') }}
                                        </p>
                                    {% endif %}
                                    <p>{{ Blog.Description }}</p>

                                {% elseif isSearch %}
                                    <p class="tagline">
                                        {{ Lang.Get('Search for') }} &ldquo;{{ Search.Keyword }}&rdquo;
                                    </p>
