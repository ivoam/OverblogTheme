                                    {% endif %}
                                    <a class="rss-follow" target="_blank" href="{{ Blog.RssUrl }}" title="{{ Lang.Get('Subsribe to RSS feed') }}">{{ Lang.Get('Subsribe to RSS feed') }}</a>
