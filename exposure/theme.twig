	<body>
		<div id="global">
			<header>
				<div id="blog-title">
					{% if isSingle %}
						<p><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title | truncate(25) }}</a></p>
					{% else %}
						<h1><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title | truncate(25) }}</a></h1>
					{% endif %}
				</div>
				<nav role="navigation">
					<ul>
						<li {% if isIndex %}class="selected"{% endif %}><a href="{{ Blog.Url }}">{{ Lang.Get('Home') }}</a></li>
						{% if Custom('nav_1_link') is not empty %}
							<li><a href="{{ Custom('nav_1_link') }}">{{ Custom('nav_1_title') }}</a></li>
						{% endif %}
						{% if Custom('nav_2_link') is not empty %}
							<li><a href="{{ Custom('nav_2_link') }}">{{ Custom('nav_2_title') }}</a></li>
						{% endif %}
						<li {% if isSpecial %}class="selected"{% endif %}><a href="{{ Blog.Url }}/contact">{{ Lang.Get('Contact') }}</a></li>
					</ul>
				</nav>
			</header>
			<div id="main">
				<div class="post-container">
					{% if isSearch %}
						<div class="search-title">
							<h2>{{ Lang.Get('Search results for') }} " {{ Search.Keyword }} "</h2>
						</div>
						{% if Posts is empty %}
							<p class="search-failure">{{ Lang.get('No posts found for this expression') }}.</p>
						{% endif %}
					{% elseif isTag %}
						<div class="tags-title">
							<h2>{{ Lang.Get('Posts with') }} #{{ Tag.Title }} tag</h2>
						</div>
					{% elseif isSpecial %}
						<div class="contact-title">
							<h2>{{ Lang.Get('Contact us') }}</h2>
						</div>
					{% endif %}
						
					{% if not isSpecial %}
						{% list Posts %}
							<div class="post-header">
								
								<!-- date -->
								<div class="post-date">
									<span>{{ Post.Date|date('l, F d, Y') }}</span>
								</div>
								
								<!-- title -->
								<div class="post-title">
									{% if isSingle %}
										<h1>
											<span>{% if Post.Title is not empty %}{{ Post.Title }}{% else %}{{ Lang.Get('From') }} {% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get(' and ') }} {% endif %}{% endlist %}{% endif %}</span>
										</h1>
									{% else %}
										<h2>
											<a title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">
												{% if Post.Title is not empty %}{{ Post.Title }}{% else %}{{ Lang.Get('From') }} {% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get(' and ') }} {% endif %}{% endlist %}{% endif %}
											</a>
										</h2>
									{% endif %}
								</div>
								
								<!-- author -->
								<div class="post-author">
									<span class="by">{{ Lang.Get('by') }}</span> 
									<span class="author-name">{{ Post.Author.Nickname | default(Blog.Owner.Nickname) }}</span>
								</div>
								
								<!-- tags -->
								<div class="post-tag">
									{% list Post.Tags %}
										{% if loop.first is not empty %}
											<span class="posted-in">{{ Lang.Get('posted in') }}</span> 
										{% endif %}
									{% endlist %}
									<span class="tag-name">
										{% list Post.Tags %}
											<a href="{{ Tag.Url }}">{{ Tag.Title }}</a>{% if loop.last is empty %}, {% endif %}
										{% endlist %}
									</span>							
								</div>
							</div>
							
							<!-- body -->
							{% if isSingle %}
								<div id="post-body">
									{{ Post.Body }}		
								</div>
							{% else %}
								<div class="post-summary">
									<p class="post-snippet">{{ Post.Snippet }}</p>
									<a href="{{ Post.Permalink }}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}">
										<img src="{% if Post.Cover is not empty %}{{ Post.Cover|resize(595,595)|crop }}{% elseif Custom('thumbnail_custom') is not empty %}{{ Custom('thumbnail_custom')|resize(595,595)|crop }}{% else %}{{ 'http://assets.over-blog-kiwi.com/themes/9/images/bg.jpg'|resize(595,595) }}{% endif %}" alt="" title="" width="595" height="595" />
									</a>
								</div>
								<div class="read-more">
