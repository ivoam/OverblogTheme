{# Presentation #}
{% if Custom('ob_widget_presentation') %}
<div class="box presentation" >
    <div class="box-titre"><h2><span>{{ Lang.Get('Presentation')|title }}</span></h2></div>
    <div class="box-content">
        <ul>
            {% if Blog.Title %}
            <li>
                <strong>
                    <label>{{ Lang.Get('Blog')|title }}</label>
                </strong> :
                {{ Blog.Title }}
            </li>
            {% endif %}
            {% if Blog.Avatar %}
            <li>
                <a href="{{ Blog.Url }}">
                    <img src="{{ Blog.Avatar|resize(200) }}" alt="{{Â Blog.Title }}" />
                </a>
            </li>
            {% endif %}
            {% if Blog.Description %}
            <li>
                <strong>
                    <label>
                        {{ Lang.Get('Description') }}
                    </label>
                </strong> :
                {{ Blog.Description }}
            </li>
            {% endif %}
            <li>
                <a class="linkContact"
                    href="/contact">
                    {{ Lang.Get('Contact') }}
                </a>
            </li>
        </ul>
    </div>
    <div class="box-footer"><h2><span>&nbsp;</span></h2></div> 
</div>
{% endif %}

{# Profile #}
{% if Custom('ob_widget_profile') %}
<div class="box profil">
    <div class="box-titre">
        <h2>
            <span>{{ Lang.Get('Profile')|title }}</span>
        </h2>
    </div>
    <div class="box-content">
        <ul>
            {% if Blog.Owner.Nickname %}
            <li>
                <strong>
                    <label>
                        {{ Lang.Get('Name')|title}} :
                    </label>
                </strong>
                {{ Blog.Owner.Nickname }}
            </li>
            {% endif %}
            {% if Blog.Owner.Avatar %}
            <li>
                <img    src="{{ Blog.Owner.Avatar|resize(200) }}"
                        alt="{{ Blog.Owner.Bio }}" />
            </li>
            {% endif %}
            {% if Blog.Owner.Bio %}
            <li>
                <strong>
                    <label>
                        {{ Lang.Get('about me:')|title }}
                    </label>
                </strong>
                {{ Blog.Owner.Bio }}
            </li>
            {% endif %}
        </ul>
    </div>
    <div class="box-footer"><h2><span>&nbsp;</span></h2></div>
</div>
{% endif %}

