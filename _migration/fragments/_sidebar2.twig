{# Social #}
{% if Custom('ob_widget_social') %}
<div class="box social">
    <div class="box-titre"><h2><span>{{ Lang.Get('Follow us') }}</span></h2></div>
    <div class="box-content">
        <ul>
            {% if Custom('facebook_username') is not empty %}
                <li class="ob2-facebook">
                    <a class="ob2-follow" href="http://facebook.com/{{ Custom('facebook_username') }}">{{ Lang.Get('Follow me on') }} Facebook</a>
                    <a class="ob2-link" href="http://facebook.com/{{ Custom('facebook_username') }}">http://facebook.com/{{ Custom('facebook_username') }}</a>
                </li>
            {% endif %}
            {% if Custom('twitter_username') is not empty %}
                <li class="ob2-twitter">
                    <a class="ob2-follow" href="http://twitter.com/{{ Custom('twitter_username') }}">{{ Lang.Get('Follow me on') }} Twitter</a>
                    <a class="ob2-link" href="http://twitter.com/{{ Custom('twitter_username') }}">http://twitter.com/{{ Custom('twitter_username') }}</a>
                </li>
            {% endif %}
            <li class="ob2-rss">
                <a class="ob2-follow" href="{{ Blog.RssUrl }}">{{ Lang.Get('Subscribe to the rss feed') }}</a>
                <a class="ob2-link" href="{{ Blog.RssUrl }}">{{ Blog.Url }}{{ Blog.RssUrl }}</a>
            </li>
        </ul>
    </div>
    <div class="box-footer"><h2><span>&nbsp;</span></h2></div> 
</div>
{% endif %}