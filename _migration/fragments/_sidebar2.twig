{# Pages #}
{% if Custom('ob_widget_pages') %}
<div class="box pages" >
    <div class="box-titre"><h2><span>{{ Lang.Get('Pages List')|title }}</span></h2></div>
    <div class="box-content">
        <ul>
            {% list Blog.Pages %}
            <li>
                <a href="{{ Page.Url }}" title="{{ Page.Title }}">
                    {{ Page.Title }}
                </a>
            </li>
            {% endlist %}
        </ul>
    </div>
    <div class="box-footer"><h2><span>&nbsp;</span></h2></div> 
</div>
{% endif %}

