    		            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    		        var s = document.getElementsByTagName('script')[0];
                        s.parentNode.insertBefore(ga, s);
    		    })();
    		{% endif %}

            {% if Custom('display_widget_archives') == false %}
                // Blog archives
                function switch_arch(year) {
                    'use strict';
                    var archiveYear,
                        archiveMonths,
                        displayStyle;

                        displayStyle = '';
                    archiveYear = document.getElementById('arch_' + year);
                    if (typeof (archiveYear) !== 'undefined') {
                        if (archiveYear.style.display !== 'none') {
                            // Hide years without months
                            archiveMonths = archiveYear.getElementsByTagName('li');
                            if (!archiveMonths.length) {
                                archiveYear.parentNode.style.display = 'none';
                            }
                            // Onclick management
                            displayStyle = 'none';
                        }
                        archiveYear.style.display = displayStyle;
                    }
                    return false;
                }
            {% endif %}

            $(document).ready(function() {

                // Fancybox
                $(".ob-link-img").attr("rel", "fancybox").fancybox({
                    type    : "image"
                });
                $(".avatar").attr("rel", "fancybox").fancybox({
                    helpers : {
                        title: {
                            type: "inside"
                        }
                    },
                    type    : "image"
                });

                {% if Custom('custom_hide_widget_search_form') == false %}
                    if($.browser.msie && $.browser.version <= 8.0 ){
                        // Placeholder Script
                        $('input[placeholder]').each(function(){
                            var input = $(this);
                            $(input).val(input.attr('placeholder'));
                            $(input).focus(function(){
                                 if (input.val() == input.attr('placeholder')) {
                                     input.val('');
                                 }
                            });
                            $(input).blur(function(){
                                if (input.val() == '' || input.val() == input.attr('placeholder')) {
                                    input.val(input.attr('placeholder'));
                                }
                            });
                        });
                    }
                {% endif %}

                {% if Custom('display_widget_archives') == false %}
                    // Blog archives
                    $('.arch_year > a').click(function() {
                        switch_arch($(this).attr('data-year'));
                        return false;
                    });
                    {% list Blog.Archives %}
                        {% if Archive.Year != "now"|date("Y") %}
                            switch_arch('{{ Archive.Year }}');
                        {% endif %}
                    {% endlist %}
                {% endif %}

                {% if Custom('background') is not empty %}
                    // Background stretch
                    if($.browser.msie &amp;&amp; $.browser.version <= 8.0 ){
                        $.backstretch('{{ Custom('background') }}');
                        $('body').css('background', 'none');
                    }
                {% endif %}
            });
        </script>
