            .box-content{ color:#858585; font-size:14px; line-height:18px;}
            .box-content a{ }
            .box-content strong{ color:#bebebe; font-weight:normal;}
            .box-footer{ display:none;}

            .profile .avatar {float: left; margin-right: 10px;}
            .profile p {margin-bottom: 10px;}
            .profile span {font-weight: bold;}
            .profile .author-bio {display: block; margin-top: 5px;}

            /* Sidebar > Présentation */
            .presentation .box-content{ position:relative;}
            .presentation .box-content ul{ }
            .presentation .box-content a img{ border:1px solid #ececec; padding:4px;}

            /* Sidebar > rechercher */
            .search .box-content form{ height:25px; position:relative;}
            .search .box-content form input {background:#fff url(http://assets.over-blog-kiwi.com/themes/7/images/input.png) top center repeat-x; border: 1px solid {% if Custom('theme_style') == 'teens' %}#fe3877{% elseif Custom('theme_style') == 'simple' %}#566f99{% else %}#e58083{% endif %}; display:block; font-family: {% if Custom('fonts') is not empty %}{{ Custom('fonts') }}{% endif %}, sans-serif; font-size:14px; height:19px; left:0px; padding:1px; position:absolute; top:2px; width: 79%;}
            .search .box-content form button {position:absolute; width: 55px; height:23px; margin: 2px; left:auto; right:0px; background:#fff url('http://assets.over-blog-kiwi.com/themes/7/images/input.png') top center repeat-x; border:1px solid #464646; color: #464646; font-size: 14px; font-family: '{% if Custom('fonts') is not empty %}{{ Custom('fonts') }}{% endif %}', sans-serif; font-weight:bold; cursor:pointer;}

            /* Sidebar > newsletter */
            .newsletter form {}
            .newsletter li {}


            /* Sidebar > Articles Récents */
            .articlerecent .box-content ul{ margin-bottom:10px;}
            .articlerecent .box-content li{ background:url(http://assets.over-blog-kiwi.com/themes/7/images/bullet.png) 0px 7px no-repeat; color:#000; font-size:14px; line-height:20px; padding-left:25px;}
            .articlerecent .box-content li a{ color:#000;}
            .articlerecent .box-content .listAll a{ padding-left:25px;}
            .articlerecent .box-content .listAll a em{ font-style:normal; text-transform:capitalize;}

