            .ob-text h4 {font-size: 16px; font-weight: normal;}
            .ob-text h5 {font-size: 14px; font-weight: bold;}
            .ob-text p {margin: 0 0 15px;}
            .ob-text li:last-child {margin-bottom: 15px;}
            .ob-text li p {margin-bottom: 5px;}
            .ob-text pre {width: 600px; margin-bottom: 10px; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word; overflow: auto;}

            .afterArticle {width: 570px; height:30px; margin: 0 0 20px; padding: 60px 0px 0px 10px; background:url(http://assets.over-blog-kiwi.com/themes/7/images/afterArticle.png) bottom left no-repeat; color:#444; line-height:30px; position:relative;}
            .afterArticle a{ color:#444;}
            .afterArticle br{ display:none;}
            .separator {display: none;}
