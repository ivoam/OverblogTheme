    <body>
        <div class="content">
            <!-- shortcut:[Header content] -->
            <div class="header">
                {% if Custom('hide_search') is empty and Custom('hide_search') == false %}
                    <div class="search">
                        <form class="search" method="post" action="/search">
                            <input type="text" name="q" placeholder="{{ Lang.Get('Search') }}..." value="{% if isSearch %}{{ Search }}{% endif %}" />
                        </form>
                    </div>
                {% endif %}
                {% if Blog.Avatar %}
                    <div class="avatar">
                        <a href="{{ Blog.Url }}"><img src="{{ Blog.Avatar|resize(100,100)|crop }}" alt="{{ Blog.Title}}" width="100" height="100"  /></a>
                    </div>
                {% endif %}
                <h1><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title }}</a></h1>
                {% if Blog.Description is not empty %}
                    <p class="description">{{ Blog.Description }}</p>
                {% endif %}
            </div>
            {% if Custom('menus') > 0 %}
                <ul class="menu">
                    <li {% if isIndex %}class="active"{% endif %}>
                        <a  href="{{ Blog.Url }}" title="{{ Blog.Title }}">
                            {{ Lang.Get('Home') }}
                        </a>
                    </li>
                    {% list Blog.PostsTags(Custom('menus')-1) %}
                    <li {% if Tag.Title is not empty and PostsTag.Title == Tag.Title %}class="active"{% endif %}>
                        <a  href="{{ PostsTag.Url }}"
                            title="{{ PostsTag.Title }}">
                            {{ PostsTag.Title|title }}
                        </a>
                    </li>
                    {% endlist %}
                </ul>
            {% endif %}

            <!-- shortcut:[Principal content] -->
            <div class="entries">
                {% if isSearch %}
                    <p class="list-title">{{ Lang.Get('Search for') }} &quot;{{ Search }}&quot;</p>
                {% endif %}

                {% if isTag %}
                    <p class="list-title">{{ Lang.Get('Posts with') }} #<strong>{{ Tag.Title }}</strong> {{ Lang.Get('tag') }}</p>
                {% endif %}

                {% if Posts is empty %}
                    <div class="post no-result">
                        {% if isSearch %}
                            {{ Lang.Get('No result for this expression') }}
                        {% elseif isSpecial %}
                            {{SpecialContent}}
                        {% else %}
                            {{ Lang.Get('No post') }}
                        {% endif %}
                    </div>
                {% endif %}
                {% list Posts %}
                    <div class="date" itemprop="startDate" datetime="{{ Post.Date }}">{{ Post.Date|datel(Lang.Get('Default date format'))|title }}</div>
                    <div class="post {{ Post.getFirstSource }}" itemscope itemtype="http://schema.org/BlogPosting">
                        <h2 class="title">
                            <a href="{{ Post.PermaLink }}" title="{{ Post.Snippet|title }}">
                                {% if Post.Title is not empty %}
                                    {{ Post.Title }}
                                {% elseif Post.Snippet is not empty %}
                                    {{ Post.Snippet|truncate(40) }}
                                {% endif %}
                            </a>
                        </h2>
                        <div class="entry">
                            {% if isSingle or Custom('display_mode') == 'All' %}
                                {{ Post.Body }}
                            {% elseif not isSingle and Custom('display_mode') != 'Summary' and Custom('display_mode') != 'All'  %}
                                {{ Post.Body(Custom('display_mode')) }}
                            {% else %}
                                <p>{{ Post.Snippet }}</p>
                            {% endif %}
                        </div>
                        <p class="meta">
                            {% if Post.Author and Post.Author is not empty %}
                                <span class="posted">{{ Lang.Get('Posted by') }} {{Post.Author}}</span> {{ Lang.Get('at') }} {{ Post.Date|date("H:ia") }}
                            {% endif %}
                            {% if not isSingle and Post.ShowComments is not empty %}
                                - <a href="{{ Post.Permalink }}#comments">{{ Lang.Get('See comments') }} ({{ Post.CommentCount }})</a>
                            {% endif %}
                            {% if Post.Tags is not empty %}
                                <br />
                                {{ Lang.Get('With tags') }} :
                                {% list Post.Tags %}
                                    #<a href="{{ Tag.Url }}">{{ Tag.Title }}</a>
                                    {% if loop.last == false %}, {% endif %}
                                {% endlist %}
                            {% endif %}
                        </p>
                        {% if isSingle %}
                            {% if Custom ('share_button') is not empty %}
                                <div class="share clearfix">
                                    {{ Post.Share }}
                                </div>
                            {% endif %}

                            {% if not isPage and Post.ShowComments is not empty %}
                                <div id="comments">
                                    <h3>{{ Lang.Get('Comments') }}</h3>
                                    {% if Custom("comment") == "Facebook" %}
                                        <div class="fb-comments" data-href="{{ Post.Permalink }}" data-num-posts="2" data-width="640" data-colorscheme="{{ Custom("custom_facebook_comments_color_theme")|default('light') }}"></div>
                                    {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
                                        <div id="disqus_thread"></div>
                                        <script type="text/javascript">
                                            var disqus_shortname = '{{ Custom('comment_disqus') }}';
                                            (function() {
                                                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                                                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                                                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                                            })();
                                        </script>
                                        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                                    {% else %}
                                        {{ Post.Comments }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endlist %}
            </div>

            <div class="pagination">
                {% if Navigation.PreviousPage is not empty %}
                    <a href="{{ Navigation.PreviousPage }}" class="prev">{{ Lang.Get('Previous page') }}</a>&nbsp;|
                {% elseif Navigation.PreviousPost is not empty %}
                    <a href="{{ Navigation.PreviousPost.Permalink }}" title="{{ Navigation.PreviousPost.Title }}" class="prev">{{ Lang.Get('Next article') }}</a>&nbsp;|
                 {% endif %}
                <a href="{{ Blog.Url }}" class="home">{{ Lang.Get('Home') }}</a>&nbsp;|&nbsp;
                <a href="#" class="home">{{ Lang.Get('Back to top') }}</a>
                {% if Navigation.NextPage is not empty %}
                    |&nbsp;<a href="{{ Navigation.NextPage }}" class="next">{{ Lang.Get('Next page') }}</a>
                {% elseif Navigation.NextPost is not empty %}
                    |&nbsp;<a href="{{ Navigation.NextPost.Permalink }}" title="{{ Navigation.NextPost.Title }}" class="prev">{{ Lang.Get('Next article') }}</a>
                {% endif %}
            </div>
            <!-- shortcut:[Modules content] -->

            <!-- shortcut:[Bottom content] -->
            {% if Custom('hide_social') == false or Custom('hide_bio') == false or Custom('hide_page') == false %}
            <div class="footer clearfix">
                {% if Custom('hide_social') is empty and Custom('hide_social') == false %}
                    <div class="social widget">
                        <h3>{{ Lang.Get('Follow me') }}</h3>
                        <ul>
                            {% if Custom('facebook_account') is not empty %}
                                <li class="facebook">
                                    <a href="http://facebook.com/{{ Custom('facebook_account') }}">{{ Lang.Get('Follow me on') }} Facebook</a>
                                </li>
                            {% endif %}
                            {% if Custom('twitter_account') is not empty %}
                                <li class="twitter">
                                    <a href="http://twitter.com/{{ Custom('twitter_account') }}">{{ Lang.Get('Follow me on') }} Twitter</a>
                                </li>
                            {% endif %}
                            <li class="rss">
                                <a href="{{ Blog.RssUrl }}">{{ Lang.Get('Subscribe to the rss feed') }}</a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
                <div class="widget pages">
                    <h3>{{ Lang.Get('Pages') }}</h3>
                    <ul>
                        {% if Custom('hide_page') is empty and Custom('hide_page') == false %}
                            {% list Blog.Pages %}
                                <li><a href="{{ Page.Url }}">{{ Page.Title }}</a></li>
                            {% endlist %}
                        {% endif %}
                        <li>
                            <a href="{{ Blog.Url }}/contact">{{ Lang.Get('Contact') }}</a>
                        </li>
                        <li>
                            <a href="{{ Blog.Url }}/mail/form">{{ Lang.Get('Subscribe') }}</a>
                        </li>
                    </ul>
                </div>
                <div class="widget archives">
                    {% if Custom('custom_hide_widget_blog_archive') == false and Blog.Archives is not empty %}
                        <h3>{{ Lang.Get('Archives') }}</h3>
                        <ul id="archivelist">
                            {% list Blog.Archives %}
                                 <li class="arch_year">
                                    <a href="#" class="plustext" onclick="javascript:switch_arch('{{ Archive.Year }}')">{{ Archive.Year }}</a>
                                    <ul id="arch_{{ Archive.Year }}" class="arch_month" {% if loop.index == 1 %}style="display:block;"{% endif %}>
                                        {% list Archive.Months %}
                                            {% if Month.PostCount > 0 %}
                                                <li><a href="{{ Month.Url }}">{{ Lang.Get(Month.Name) }}</a> <span class="end-number"></span><span class="number">{{ Month.PostCount }}</span></li>
                                            {% endif %}
                                        {% endlist %}
                                    </ul>
                                </li>
                            {% endlist %}
                        </ul>
                    {% endif %}
                </div>
            </div>
            {% if Custom('footer') %}
            <div class="m-footer">
                <p>{{ Custom('footer') }}&nbsp;-&nbsp;{{ Lang.Get('Hosted by') }} <a href="http://www.over-blog.com" target="_blank">Overblog</a></p>
            </div>
            {% endif %}
        </div>
        {% endif %}

